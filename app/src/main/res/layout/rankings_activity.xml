<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rankings_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
    </android.support.v7.widget.RecyclerView>

    <View
        android:id="@+id/hotspot_test"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/hotspot_small"/>

    <View
        android:id="@+id/hotspot_med"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/hotspot_test"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/hotspot_small"/>

    <View
        android:id="@+id/hotspot_large"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/hotspot_med"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/hotspot_small"/>

</RelativeLayout>